" Enable syntax highlighting
syntax enable

" Display line numbers (in gray)
set number
highlight LineNr ctermfg=darkgray

" Use UTF-8 as standard encoding
set encoding=utf-8

" Don't redraw while executing macros
set lazyredraw

" Use X clipboard
set clipboard=unnamedplus

" Shut up!
set belloff=all
